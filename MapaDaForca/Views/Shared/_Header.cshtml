<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h4 class="page-title">@ViewBag.Title</h4>


                    @if (ViewBag.Breadcrumbs != null)
                    {
                        <ol class="breadcrumb">

                            @foreach (Breadcrumb breadcrumb in ViewBag.Breadcrumbs)
                            {
                                if (breadcrumb.IsActive == true)
                                {
                                    <li class="breadcrumb-item"><a href="@breadcrumb.Link"><b>@breadcrumb.Name </b></a></li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item"><a href="@breadcrumb.Link">@breadcrumb.Name </a></li>
                                }
                            }

                        </ol>
                    }


                </div>
                <div class="col-md-4">

                    @if (ViewData["DeleteButtonLink"] != null)
                    {
                        <button type="button" style="background-color:#d67272; border-color:#d67272" class="float-right btn btn-primary waves-effect waves-light button-header" data-toggle="modal" data-target=".bs-example-modal-center">Eliminar</button>
                        <div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title mt-0">Eliminar @ViewData["DeleteButton"]</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Você tem certeza que este registro deve ser eliminado?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="Excluir" data-dismiss="modal">Confirmar</button>
                                        <button type="button" class="btn btn-secondary" id="CloseModal" data-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (ViewData["CreateButtonLink"] != null)
                    {
                        <div class="float-right d-none d-md-block">
                            <div><a href="@ViewData["CreateButtonLink"]" class="btn btn-primary waves-effect waves-light button-header">Criar Novo</a></div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .button-header
    {
    margin: 1px
    }
</style>