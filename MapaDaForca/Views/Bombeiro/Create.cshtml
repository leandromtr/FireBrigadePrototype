@model Bombeiro
@using MapaDaForca.Model.Enums

@{
    ViewBag.Title = "Cadastrar Bombeiro";
    ViewBag.Breadcrumbs = new List<Breadcrumb>()
{
new Breadcrumb() { Name = "Dashboard", Link = "/" },
new Breadcrumb() { Name = "Bombeiro", Link = @Url.Action("Index","Bombeiro") },
new Breadcrumb() { Name = "Cadastrar", Link = @Url.Action("Create","Bombeiro"), IsActive = true}
};
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/bombeiro/create">
                    <div class="form-group">
                        <label>Nome</label>
                        <div>
                            <input asp-for="Nome" class="form-control" required data-parsley-minlength="6">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Dt. Início de Uso</label>
                        <div>
                            <div class="input-group">
                                <input asp-for="DtInicio" type="date" class="form-control" placeholder="dd/mm/yyyy">
                                <div class="input-group-append"><span class="input-group-text"><i class="mdi mdi-calendar"></i></span></div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Posto</label>
                        <div>
                            <select class="form-control" asp-for="PostoId" asp-items="@(new SelectList(@Model.Postos,"Id","Nome"))"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Quartel</label>
                        <div>
                            <select class="form-control" asp-for="QuartelId" asp-items="@(new SelectList(@Model.Quarteis,"Id","Nome"))"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Turno</label>
                        <div>
                            <select class="form-control" asp-for="Turno" asp-items="@Html.GetEnumSelectList<Turno>()"></select>
                        </div>
                    </div>

                    <div class="form-group mb-0">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Cadastrar</button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5" onclick="location.href='@Url.Action("Index", "Bombeiro")'">Voltar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>