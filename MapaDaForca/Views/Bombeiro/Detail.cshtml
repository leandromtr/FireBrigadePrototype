<script type="text/javascript">
    $(document).ready(function () {

        if ("@(ViewData["MessageCreate"])" != "") {
            $.notify("@(ViewData["MessageCreate"])", "success");
        }

        $("#SaveBombeiro").click(function (e) {

            e.preventDefault();

            $.ajax({
                url: '@Url.Action("Edit","Bombeiro")',
                type: "POST",
                datatype: "json",
                data: $("#form").serialize()
            })
            .done(function (data) {
                if (data.success == true) {
                    $.notify(data.message, "success");
                }
                else {
                    $.notify(data.message, "error");
                }
            })
        });



        $('#Excluir').click(function () {
            $.ajax(
            {
                type: "Delete",
                url: "@Url.Action("Delete", "Bombeiro", new { @id = Model.Bombeiro.Id })",
                success: function (data) {
                    if (data.success == true) {
                        window.location.href = '@Url.Action("Index", "Bombeiro", new { @notification = true })';
                    }
                    else {
                        $.notify(data.message, "error");
                    }
                }
            });
        });
    });



    $(".bombeiroFuncaDelete").click(function (element) {
        var id = $(element.currentTarget).closest('.bombeiroFuncao').attr("data-bombeiroFuncaoId");
        $(element.currentTarget).closest('.bombeiroFuncao').remove();
