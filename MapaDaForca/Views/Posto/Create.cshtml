@model Posto
@{
    ViewBag.Title = "Cadastrar Posto";
    ViewBag.Breadcrumbs = new List<Breadcrumb>()
    {
        new Breadcrumb() { Name = "Dashboard", Link = "/" },
        new Breadcrumb() { Name = "Posto", Link = @Url.Action("Index","Posto") },
        new Breadcrumb() { Name = "Cadastrar", Link = @Url.Action("Create","Posto"), IsActive = true}
    };    
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/posto/create">
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(x => x.Nome)</label>
                        <div>
                            <input name="nome" type="text" class="form-control" required data-parsley-minlength="6">
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Cadastrar</button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5" onclick="location.href='@Url.Action("Index", "Posto")'">Voltar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>