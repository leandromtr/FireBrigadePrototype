@model EscalaTipo
@using MapaDaForca.Model.Enums

@{
    ViewBag.Title = "Cadastrar Tipo da Ausência";
    ViewBag.Breadcrumbs = new List<Breadcrumb>()
{
new Breadcrumb() { Name = "Dashboard", Link = "/" },
new Breadcrumb() { Name = "Tipo da Ausência", Link = @Url.Action("Index","EscalaTipo") },
new Breadcrumb() { Name = "Cadastrar", Link = @Url.Action("Create","EscalaTipo"), IsActive = true}
};
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/escalatipo/create">
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(x => x.Descricao)</label>
                        <div>
                            <input asp-for="Descricao" type="text" class="form-control" required >
                        </div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(x => x.EscalaTipoDetalhe)</label>
                        <div>
                            <select class="form-control" asp-for="EscalaTipoDetalhe" asp-items="Html.GetEnumSelectList<EscalaTipoDetalhe>()">
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Cadastrar</button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5" onclick="location.href='@Url.Action("Index", "EscalaTipo")'">Voltar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>